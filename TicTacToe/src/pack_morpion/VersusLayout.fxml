<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.geometry.Insets?>
<?import pack_morpion.VersusController ?>

<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="pack_morpion.VersusController"
      spacing="10" alignment="CENTER">
    
    <children>
        <GridPane fx:id="grid" alignment="CENTER">
            <padding>
                <Insets top="10" bottom="10" left="10" right="10"/>
            </padding>
            
            <Button fx:id="homme_Vs_Ai" text="H VS AI" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            <Button fx:id="homme_Vs_Homme" text="H VS H" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            
            <RadioButton fx:id="radioF" text="F" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <RadioButton fx:id="radioM" text="M" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <RadioButton fx:id="radioD" text="D" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
        </GridPane>
    </children>
</HBox>