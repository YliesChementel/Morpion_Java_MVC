            <TextField fx:id="fieldF1" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            <TextField fx:id="fieldF2" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
            <TextField fx:id="fieldF3" GridPane.columnIndex="3" GridPane.rowIndex="0"/>
            <!-- Ligne 2 -->
            <Label text="M" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="fieldF4" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <TextField fx:id="fieldF5" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
            <TextField fx:id="fieldF6" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
            <!-- Ligne 3 -->
            <Label text="D" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField fx:id="fieldF7" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            <TextField fx:id="fieldF8" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
            <TextField fx:id="fieldF9" GridPane.columnIndex="3" GridPane.rowIndex="2"/>
        </GridPane>
    </center>
    
