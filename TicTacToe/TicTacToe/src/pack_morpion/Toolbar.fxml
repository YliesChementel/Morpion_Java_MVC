<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ToolBar?>

<ToolBar prefHeight="40.0" prefWidth="600.0"
		 styleClass="ToolBar"
		 xmlns="http://javafx.com/javafx/21" 
		 xmlns:fx="http://javafx.com/fxml/1" 
		 fx:controller="pack_morpion.ToolbarController">
    <items>
    	<MenuBar fx:id="menuBar" focusTraversable="false" style="-fx-background-color: #a9e6f9;" styleClass="Menu">
	        <Menu fx:id="menu"  text="Menu ▼">
	            <items>
	                <MenuItem fx:id="settingsItem" styleClass="MenuButtons" text="Paramètres" />
	                <MenuItem fx:id="modelsItem" styleClass="MenuButtons" text="Modèls" />
	            </items>
	        </Menu>
        </MenuBar>
    </items>
</ToolBar>