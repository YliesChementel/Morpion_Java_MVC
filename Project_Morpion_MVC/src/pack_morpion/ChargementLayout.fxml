<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import pack_morpion.ModelController?>


<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefWidth="500" prefHeight="500"
            fx:controller="pack_morpion.ModelController">

    <center>
        <ProgressBar fx:id="progressBar" prefWidth="400" prefHeight="50" progress="0"/>
    </center>

    <top>
        <TextField fx:id="textField" prefWidth="400" prefHeight="50"/>
    </top>
	
	<bottom>
        <Button fx:id="startButton" text="Start" onAction="#initializeComponents"/>
    </bottom>
</BorderPane>